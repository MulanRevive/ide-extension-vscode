{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "木兰",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.ulang",
					"match": "\\b(if|elif|else|return)\\b"
				},
				{
					"name": "keyword.function.ulang",
					"match": "\\b(func)\\b"
				},
				{
					"name": "keyword.loop.ulang",
					"match": "\\b(while|break|continue)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.ulang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ulang",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ulang"
}