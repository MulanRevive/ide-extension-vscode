{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "木兰",
	"patterns": [
		{
			"include": "#关键字"
		},
		{
			"include": "#常量"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"关键字": {
			"patterns": [
				{
					"name": "keyword.control.ulang",
					"match": "\\b(if|elif|else|return|while|break|continue)\\b"
				},
				{
					"name": "keyword.compute.ulang",
					"match": "\\b(and|or)\\b"
				},
				{
					"name": "keyword.other.ulang",
					"match": "\\b(func)\\b"
				}
			]
		},
		"常量": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\d+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.ulang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ulang",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ulang"
}